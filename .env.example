OPENAI_API_KEY="sk-1234"
ANTHROPIC_API_KEY=""
OLLAMA=""
PROMPT_TOOLKIT_NO_CPR=1
CAI_STREAM=false
CAI_MODEL="alias1"

# Aegis Integration - Multi-Agent Pattern Configuration
CAI_PATTERN="swarm"  # Options: swarm, parallel, hmaw, adversarial, ensemble, composite_audit
CAI_SKEPTIC_LEVEL="medium"  # Options: low, medium, high (aggressiveness of critics)
CAI_ENSEMBLE_VOTING="weighted"  # Options: weighted, permutation, unanimous, simple
CAI_PLANNING_DEPTH="3"  # Options: 1-5 (depth of pre-Act planning)

# Grit Mode - Audit Persistence Configuration
CAI_GRIT_MODE="true"  # Enable hypothesis-driven persistence
CAI_STUCK_THRESHOLD="3"  # Number of tools without findings before pivoting
CAI_MAX_HYPOTHESES="10"  # Maximum hypotheses to track

# Precision Enhancement Configuration (NEW)
CAI_USE_SMARTBERT="false"  # Enable neural embeddings (requires transformers + torch)
CAI_USE_ML_CLASSIFIER="false"  # Enable ML-based TP/FP classification (requires xgboost)
CAI_USE_CALIBRATION="false"  # Enable confidence score calibration (requires sklearn)
CAI_ENABLE_SYMBOLIC_CORRELATION="true"  # Cross-correlate static and symbolic results
CAI_USE_PROTOCOL_ANALYZERS="true"  # Enable protocol-specific vulnerability detection
CAI_RAG_EMBED_DIM="768"  # Embedding dimension (768 for SmartBERT, 256 for hash-based)
